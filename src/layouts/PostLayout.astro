---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"general">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Italiana&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />

    <main class="post-layout">
      <div class="gradient-bg"></div>
      <div class="container">
        <article class="post-content">
          <header class="post-header">
            <div class="post-meta">
              <time datetime={pubDate.toISOString()}>
                {
                  new Date(pubDate).toLocaleDateString("es-ES", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                    timeZone: "UTC",
                  })
                }
              </time>
              {
                updatedDate && (
                  <span class="updated-date">
                    Actualizado el{" "}
                    {new Date(updatedDate).toLocaleDateString("es-ES", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                      timeZone: "UTC",
                    })}
                  </span>
                )
              }
            </div>
            <h1 class="post-title">{title}</h1>
            <p class="post-description">{description}</p>
          </header>

          {
            heroImage && (
              <div class="post-hero">
                <img src={heroImage} alt={title} />
                <div class="image-overlay" />
              </div>
            )
          }

          <div class="post-body">
            <slot />
          </div>
        </article>
      </div>
    </main>

    <Footer />

    <style>
      :root {
        --color-bg: #030303;
        --color-text: #ffffff;
        --color-text-muted: #d1d1d1;
        --color-accent: #e5c1ff;
        --color-accent-dark: #b985ff;
        --color-surface: rgba(255, 255, 255, 0.05);
        --color-surface-hover: rgba(255, 255, 255, 0.08);
        --color-border: rgba(255, 255, 255, 0.1);
        --font-display: "Italiana", serif;
        --font-body: "Inter", sans-serif;
        --radius-sm: 8px;
        --radius-md: 12px;
        --radius-lg: 16px;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.2);
        --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.4);
      }

      .post-layout {
        min-height: 100vh;
        background: var(--color-bg);
        color: var(--color-text);
        position: relative;
        padding: 4rem 0;
      }

      .gradient-bg {
        position: absolute;
        inset: 0;
        z-index: 1;
        opacity: 0.5;
        background: radial-gradient(
            circle at 20% 20%,
            rgba(229, 193, 255, 0.15) 0%,
            transparent 70%
          ),
          radial-gradient(
            circle at 80% 50%,
            rgba(255, 184, 0, 0.15) 0%,
            transparent 70%
          ),
          radial-gradient(
            circle at 40% 80%,
            rgba(255, 107, 77, 0.15) 0%,
            transparent 70%
          );
        filter: blur(80px);
        pointer-events: none;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
      }

      .post-content {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: 4rem;
        backdrop-filter: blur(10px);
        box-shadow: var(--shadow-md);
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      .post-content:hover {
        box-shadow: var(--shadow-lg);
      }

      .post-header {
        margin-bottom: 4rem;
        text-align: center;
        position: relative;
      }

      .post-meta {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 2rem;
        color: var(--color-text-muted);
        font-size: 0.9rem;
      }

      .updated-date {
        font-style: italic;
      }

      .post-title {
        font-family: var(--font-display);
        font-size: 3.5rem;
        line-height: 1.2;
        margin: 0 0 2rem;
        color: var(--color-text);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        display: inline-block;
      }

      .post-body {
        font-family: var(--font-body);
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--color-text);
      }

      .post-body h1 {
        font-family: var(--font-display);
        font-size: 3rem;
        margin: 0 0 2rem;
        color: var(--color-text);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        padding-left: 0;
        border-bottom: 2px solid var(--color-accent);
        padding-bottom: 1rem;
        display: inline-block;
        width: 100%;
      }

      .post-body h1::before {
        display: none;
      }

      .post-body h2 {
        font-family: var(--font-display);
        font-size: 2.5rem;
        margin: 4rem 0 2rem;
        color: var(--color-text);
        position: relative;
        padding-left: 0;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        border-bottom: 2px solid var(--color-accent);
        padding-bottom: 1rem;
        display: inline-block;
        width: 100%;
      }

      .post-body h2::before {
        display: none;
      }

      .post-body h2::after {
        display: none;
      }

      .post-body h3 {
        font-family: var(--font-display);
        font-size: 2rem;
        margin: 3rem 0 1.5rem;
        color: var(--color-text);
        position: relative;
        padding-left: 0;
        font-weight: 600;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
        display: inline-block;
        width: 100%;
      }

      .post-body h4 {
        font-family: var(--font-display);
        font-size: 1.5rem;
        margin: 2.5rem 0 1.25rem;
        color: var(--color-text);
        position: relative;
        padding-left: 0;
        font-weight: 600;
        border-bottom: 1px dashed var(--color-border);
        padding-bottom: 0.5rem;
        display: inline-block;
        width: 100%;
      }

      .post-body h5 {
        font-family: var(--font-display);
        font-size: 1.25rem;
        margin: 2rem 0 1rem;
        color: var(--color-text);
        position: relative;
        padding-left: 0;
        font-weight: 600;
        display: inline-block;
        width: 100%;
      }

      .post-body h6 {
        font-family: var(--font-display);
        font-size: 1.1rem;
        margin: 1.75rem 0 0.75rem;
        color: var(--color-text);
        position: relative;
        padding-left: 0;
        font-weight: 600;
        display: inline-block;
        width: 100%;
      }

      .post-body p {
        margin: 0 0 2rem;
        position: relative;
        color: var(--color-text);
      }

      .post-body strong {
        color: var(--color-accent);
        font-weight: 600;
      }

      .post-body ul {
        margin: 2rem 0;
        padding-left: 2rem;
        list-style: none;
      }

      .post-body ul li {
        margin-bottom: 1rem;
        position: relative;
        padding-left: 2rem;
      }

      .post-body ul li::before {
        content: "â€¢";
        color: var(--color-accent);
        position: absolute;
        left: 0;
        font-size: 1.5rem;
        line-height: 1;
      }

      .post-hero img {
        width: 100%;
      }

      .post-body img {
        width: 100%;
        height: auto;
        border-radius: var(--radius-md);
        margin: 2rem 0;
        box-shadow: var(--shadow-md);
        transition: transform 0.3s ease;
        display: block;
        margin-left: auto;
        margin-right: auto;
      }

      .post-body p img {
        width: 100%;
      }

      .post-body img:hover {
        transform: scale(1.02);
      }

      .post-body .math {
        background: var(--color-surface-hover);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        margin: 2rem 0;
        overflow-x: auto;
        border: 1px solid var(--color-border);
        font-size: 1.2rem;
        line-height: 1.6;
      }

      .post-body .math-inline {
        background: var(--color-surface-hover);
        padding: 0.2rem 0.4rem;
        border-radius: var(--radius-sm);
        border: 1px solid var(--color-border);
        font-size: 1.1rem;
      }

      .post-body .example {
        background: var(--color-surface-hover);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        margin: 1rem 0;
        border-left: 4px solid var(--color-accent);
      }

      .post-body .example-title {
        color: var(--color-accent);
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      .post-body .check {
        color: #4caf50;
        margin-right: 0.5rem;
      }

      .post-body .cross {
        color: #f44336;
        margin-right: 0.5rem;
      }

      .post-body a {
        color: var(--color-accent);
        text-decoration: none;
        border-bottom: 1px solid var(--color-accent);
        transition: all 0.3s ease;
      }

      .post-body a:hover {
        color: var(--color-accent-dark);
        border-color: var(--color-accent-dark);
      }

      .post-body code {
        background: var(--color-surface-hover);
        padding: 0.2em 0.4em;
        border-radius: var(--radius-sm);
        font-family: monospace;
        font-size: 0.9em;
        border: 1px solid var(--color-border);
      }

      .post-body pre {
        background: var(--color-surface-hover);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid var(--color-border);
      }

      .post-body pre code {
        background: none;
        padding: 0;
        border: none;
      }

      .post-body blockquote {
        border-left: 4px solid var(--color-accent);
        margin: 2rem 0;
        padding: 1.5rem 2rem;
        background: var(--color-surface-hover);
        border-radius: var(--radius-md);
        position: relative;
      }

      .post-body blockquote::before {
        content: '"';
        position: absolute;
        top: -1rem;
        left: 1rem;
        font-size: 4rem;
        color: var(--color-accent);
        opacity: 0.2;
        font-family: var(--font-display);
      }

      .post-body blockquote p {
        margin: 0;
        font-style: italic;
        color: var(--color-text-muted);
        position: relative;
        z-index: 1;
      }

      .post-body table {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        background: var(--color-surface-hover);
        border-radius: var(--radius-md);
        overflow: hidden;
      }

      .post-body th,
      .post-body td {
        padding: 1rem;
        border: 1px solid var(--color-border);
      }

      .post-body th {
        background: var(--color-surface);
        font-weight: 600;
      }

      @media (max-width: 768px) {
        .container {
          padding: 0 1rem;
        }

        .post-content {
          padding: 2rem;
        }

        .post-title {
          font-size: 2.5rem;
          color: var(--color-text);
        }

        .post-description {
          font-size: 1.1rem;
        }

        .post-hero {
          margin: 0 -2rem 2rem;
        }

        .post-body h1 {
          font-size: 2.5rem;
          padding-left: 1.5rem;
        }

        .post-body h2 {
          font-size: 2rem;
          padding-left: 1.5rem;
        }

        .post-body .math {
          font-size: 1.1rem;
          padding: 1rem;
        }

        .post-body .math-inline {
          font-size: 1rem;
        }
      }

      @media (max-width: 480px) {
        .post-title {
          font-size: 2rem;
        }

        .post-content {
          padding: 1.5rem;
        }

        .post-body h1 {
          font-size: 2rem;
          padding-left: 1.5rem;
        }

        .post-body h2 {
          font-size: 1.5rem;
          padding-left: 1.25rem;
        }
      }

      /* Estilos para los encabezados markdown */
      :global(h1) {
        font-family: var(--font-body);
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--color-text);
        margin: 2rem 0 1.5rem;
        line-height: 1.2;
        background: linear-gradient(
          135deg,
          var(--color-accent) 0%,
          var(--color-accent-dark) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      :global(h2) {
        font-family: var(--font-body);
        font-size: 2rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 2rem 0 1rem;
        line-height: 1.3;
        border-bottom: 2px solid var(--color-accent);
        padding-bottom: 0.5rem;
        display: inline-block;
        width: 100%;
      }

      :global(h3) {
        font-family: var(--font-body);
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 1.5rem 0 1rem;
        line-height: 1.4;
      }

      :global(h4) {
        font-family: var(--font-body);
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 1.25rem 0 0.75rem;
        line-height: 1.4;
      }

      :global(h5) {
        font-family: var(--font-body);
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 1rem 0 0.5rem;
        line-height: 1.4;
      }

      :global(h6) {
        font-family: var(--font-body);
        font-size: 1rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 0.75rem 0 0.5rem;
        line-height: 1.4;
      }

      /* Estilos para el contenido markdown */
      :global(p) {
        font-size: 1.1rem;
        line-height: 1.7;
        color: var(--color-text-muted);
        margin: 1rem 0;
      }

      :global(strong) {
        color: var(--color-text);
        font-weight: 600;
      }

      :global(em) {
        color: var(--color-text);
        font-style: italic;
      }

      :global(blockquote) {
        border-left: 4px solid var(--color-accent);
        padding-left: 1rem;
        margin: 1.5rem 0;
        color: var(--color-text-muted);
      }

      :global(code) {
        background: var(--color-surface);
        padding: 0.2rem 0.4rem;
        border-radius: var(--radius-sm);
        font-family: monospace;
        font-size: 0.9em;
        color: var(--color-text);
      }

      :global(pre) {
        background: var(--color-surface);
        padding: 1rem;
        border-radius: var(--radius-md);
        overflow-x: auto;
        margin: 1.5rem 0;
      }

      :global(pre code) {
        background: none;
        padding: 0;
        border-radius: 0;
      }

      :global(ul),
      :global(ol) {
        margin: 1rem 0;
        padding-left: 1.5rem;
      }

      :global(li) {
        margin: 0.5rem 0;
        color: var(--color-text-muted);
      }

      :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
      }

      :global(th),
      :global(td) {
        border: 1px solid var(--color-border);
        padding: 0.75rem;
        text-align: left;
      }

      :global(th) {
        background: var(--color-surface);
        color: var(--color-text);
        font-weight: 600;
      }

      :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius-md);
        margin: 1.5rem 0;
      }

      :global(a) {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      :global(a:hover) {
        color: var(--color-accent-dark);
      }
    </style>
  </body>
</html>
